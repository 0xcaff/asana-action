{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "Fulfillment": {
      "type": "object",
      "properties": {
        "conversationName": {
          "type": "string"
        }
      },
      "required": [
        "conversationName"
      ]
    },
    "Parameter": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "type": {
          "type": "string"
        }
      },
      "required": [
        "name",
        "type"
      ]
    },
    "Trigger": {
      "type": "object",
      "properties": {
        "queryPatterns": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "required": [
        "queryPatterns"
      ]
    },
    "Intent": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "parameters": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Parameter"
          }
        },
        "trigger": {
          "$ref": "#/definitions/Trigger"
        }
      },
      "required": [
        "name"
      ]
    },
    "Action": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "fulfillment": {
          "$ref": "#/definitions/Fulfillment"
        },
        "intent": {
          "$ref": "#/definitions/Intent"
        },
        "signInRequired": {
          "type": "boolean"
        }
      },
      "required": [
        "name",
        "fulfillment",
        "intent"
      ]
    },
    "ActionPackage": {
      "type": "object",
      "properties": {
        "actions": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Action"
          }
        }
      },
      "required": [
        "actions"
      ]
    }
  },
  "$ref": "#/definitions/ActionPackage"
}